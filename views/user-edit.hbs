<h2>EDIT YOUR PROFILE</h2>


<form action="/user/edit" method="post">

  <div>
    <label for="name-input"> Username </label>
    <input type="text" name="username" id="name-input" placeholder="e.g., Diana
      Prince">
  </div>

  <div>
    <label for="email-input"> Email </label>
    <input type="email" name="email" id="email-input" placeholder="e.g.,
      diana@themyscira.agency">
  </div>

  <div>
    <label for="password-input"> Password </label>
    <input type="password" name="password" id="password-input"
      placeholder="e.g., ••••••••••••">
  </div>

  <div>
    <label for="namedog">Namedog</label>
    <input type="text" name="text">
  </div>

  <div>
    <label for="">Image</label>
    <input type="image" name="image">
  </div>

  <div>
    <label for="">Breed</label>
    <input type="text" name="breed">
  </div>

  <div>
    <label for="">Sex</label>
    <input type="text" name="sex" id="sex-input"
      placeholder="e.g., male female">
  </div>

  <div>
    <label for="">Telephone</label>
    <input type="text" name="telephone">
  </div>

  <div>
    <label for="">Description</label>
    <input type="text" name="text">
  </div>

  <div>
    <label for="">Age</label>
    <input type="text" name="text">
  </div>

  <div>
    <label for="">Weigth</label>
    <input type="text" name="text">
  </div>

  <div>
    <label for="">CP</label>
    <input type="text" name="text">
  </div>

  <button type="submit">EDIT</button>
</form>
